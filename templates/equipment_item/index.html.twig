{% extends 'base.html.twig' %}

{% block title %}EquipmentItem index{% endblock %}

{% block body %}
    <h1>EquipmentItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in equipment_items %}
            <tr>
                <td>{{ item.equipmentType.name }}</td>
                <td>{{ item.state.value }}</td>
                <td>
                    <a href="{{ path('app_equipment_item_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('app_equipment_item_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipment_item_new') }}">Create new</a>
{% endblock %}
