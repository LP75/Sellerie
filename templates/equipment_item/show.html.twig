{% extends 'base.html.twig' %}

{% block title %}EquipmentItem{% endblock %}

{% block body %}
    <h1>EquipmentItem</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment_item.id }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ equipment_item.state.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipment_item_index') }}">back to list</a>

    <form action="{{ path('app_equipment_item_edit', {'id': equipment_item.id}) }}" method="post" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('show' ~ equipment_item.id) }}">
        <button type="submit" class="btn btn-link p-0 m-0 align-baseline">edit</button>
    </form>

    {{ include('equipment_item/_delete_form.html.twig') }}
{% endblock %}
